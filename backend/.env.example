# Backend environment variables
# Copy this file to .env and fill in your values

# Neon PostgreSQL connection string
# SSL params (sslmode, channel_binding) are extracted from the URL and
# passed as psycopg2 connect_args by db.py to avoid deprecation warnings.
DATABASE_URL=postgresql://user:password@ep-example.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT shared secret (MUST match frontend JWT_SECRET_KEY exactly)
BETTER_AUTH_SECRET=your-jwt-secret-here
JWT_SECRET_KEY=your-jwt-secret-here

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000

# Cohere API key (Phase 3 - AI Chatbot)
CO_API_KEY=your-cohere-api-key-here
